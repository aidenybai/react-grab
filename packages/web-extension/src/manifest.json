{
  "manifest_version": 3,
  "name": "React Grab",
  "version": "0.1.0",
  "description": "Grab React components from any website with Cmd+C. Point, click, and copy elements to give context to Cursor, Claude Code, and other AI coding assistants.",
  "author": "Aiden Bai",
  "homepage_url": "https://react-grab.com",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "action": {
    "default_title": "React Grab (Active)",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/react-grab.ts"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
