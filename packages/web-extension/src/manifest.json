{
  "manifest_version": 3,
  "name": "React Grab",
  "version": "0.0.2",
  "description": "Grab React components from any website with Cmd+C. Perfect for Cursor, Claude Code, and other AI coding tools.",
  "author": "Aiden Bai",
  "homepage_url": "https://react-grab.com",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "action": {
    "default_title": "React Grab (Active)",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/react-grab.ts"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
