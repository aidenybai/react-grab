{
  "name": "@react-grab/agent-playground",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:claude": "REACT_GRAB_CWD=$(cd ../.. && pwd) node ../provider-claude-code/dist/cli.cjs && VITE_PROVIDER=claude vite",
    "dev:cursor": "REACT_GRAB_CWD=$(cd ../.. && pwd) node ../provider-cursor/dist/cli.cjs && VITE_PROVIDER=cursor vite",
    "dev:opencode": "REACT_GRAB_CWD=$(cd ../.. && pwd) node ../provider-opencode/dist/cli.cjs && VITE_PROVIDER=opencode vite",
    "dev:codex": "REACT_GRAB_CWD=$(cd ../.. && pwd) node ../provider-codex/dist/cli.cjs && VITE_PROVIDER=codex vite",
    "dev:gemini": "REACT_GRAB_CWD=$(cd ../.. && pwd) node ../provider-gemini/dist/cli.cjs && VITE_PROVIDER=gemini vite",
    "dev:amp": "REACT_GRAB_CWD=$(cd ../.. && pwd) node ../provider-amp/dist/cli.cjs && VITE_PROVIDER=amp vite",
    "dev:ami": "VITE_PROVIDER=ami vite",
    "dev:droid": "REACT_GRAB_CWD=$(cd ../.. && pwd) node ../provider-droid/dist/cli.cjs && VITE_PROVIDER=droid vite",
    "dev:all": "node scripts/start-all-servers.js & sleep 2 && VITE_PROVIDER=cursor,claude,opencode,codex,gemini,amp,ami,droid,visual-edit vite",
    "servers": "node scripts/start-all-servers.js",
    "servers:cursor": "REACT_GRAB_CWD=$(cd ../.. && pwd) node ../provider-cursor/dist/cli.cjs",
    "servers:claude": "REACT_GRAB_CWD=$(cd ../.. && pwd) node ../provider-claude-code/dist/cli.cjs"
  },
  "dependencies": {
    "react": "19.0.1",
    "react-dom": "19.0.1",
    "react-grab": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.0"
  }
}
